@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Ictshop.Models.Sanpham>

@{
    ViewBag.Title = "Index_search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index_search", "Home", FormMethod.Get))
{
}

<div id="main">
    <div id="left">
        <ul>

            @foreach (var item in Model)
            {

                <div class="col-md-3 col-sm-6">
                    <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                        <img src=@Url.Content("~/HinhanhSP/"+item.Anhbia) class="img-responsive" alt="" width="400" height="400" />
                    </a>
                    <center>
                        <h3>@item.Tensp</h3>
                        <h3 style="color:red">Giá: @item.Giatien</h3>
                        <br />
                        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                        {
                            <input type="submit" value="Mua hàng" id="bgnGioHang" />

                        }
                        @*<a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a>*@
                    </center>
                </div>
            }
        </ul>



    </div>
    @Html.PagedListPager(Model, page => Url.Action("Index_search", new
        {
            page,
            searchString = ViewBag.Keyword
        }),
        PagedListRenderOptions.PageNumbersOnly)
</div>
